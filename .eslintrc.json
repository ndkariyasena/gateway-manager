{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true,
    "commonjs": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended", 
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "requireConfigFile": false,
    "allowImportExportEverywhere": false,
    "codeFrame": true,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "prefer-destructuring": "error",
    "strict": "off",
    "dot-notation": [0, {"allowPattern": "^a-z+(_a-z+)+$"}],
    "no-console": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "max-len": [1, {"code": 140, "tabWidth": 2, "ignoreUrls": true}],
    "complexity": "error",
    "no-duplicate-imports": "error",
    "no-empty-function": "error",
    "no-var": "error",
    "prefer-const": "error",
    "camelcase": [0,{
      "properties": "never",
      "ignoreDestructuring": true
    }],
    "no-const-assign": "error",
    "no-nested-ternary": "error",
    "no-else-return": "error",
    "no-unreachable": "error",
    "valid-typeof": "error",
    "no-plusplus": 0,
    "no-return-await": 0,
    "no-underscore-dangle": 0,
    "no-restricted-syntax": [
      "error",
      "info"
    ]
  }
}